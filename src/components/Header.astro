---
import "../styles/header.css";
interface Props {
  profilePicture: string,
  name: string,
  title: string,
  yoe: number
};

const {profilePicture, name, title, yoe} = Astro.props;
---
      <div class="grid grid-cols-1 gap-4 md:grid-cols-4 mb-4 bg-zinc-800 cv-header py-2">
        <div class="flex col-span-1 profile-picture-container">
          <img
            class="profile-picture aspect-square rounded-full border-solid border-4"
            src={profilePicture}
          />
        </div>
        <div class="flex flex-col justify-center col-span-1 md:col-span-3 items-center md:items-start">
    <div class="text-4xl">{name}</div>
          <div class="text-2xl">
      <span class="text-gradient">{title}</span>
          </div>  
          <div class="text-xl">
      <span class="text-xl">{yoe} Years of experience</span>
          </div>
        </div>
      </div>
